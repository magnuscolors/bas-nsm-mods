<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data noupdate="0">
        
        <record model="res.groups" id="group_module_supplier_portal">
            <field name="name">Supplier Portal</field>
        </record>
        
        <record model="ir.rule" id="account_user_rule">
            <field name="name">Supplier Invoices</field>
            <field name="model_id" ref="model_account_invoice"/>
            <field name="global" eval="False"/>
            <field name="domain_force">[('partner_id', '=', [user.partner_id.id]), '|', ('type', '=', 'in_invoice'), ('type', '=', 'in_refund')]</field>
            <field name="groups" eval="[(4, ref('group_module_supplier_portal'))]"/>
        </record>
        
        <record model="ir.rule" id="account_user_rule_partner">
            <field name="name">Supplier</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="global" eval="False"/>
            <field name="domain_force">[('id', 'in', [user.partner_id.id]), ('supplier', '=', 'True')]</field>
            <field name="groups" eval="[(4, ref('group_module_supplier_portal'))]"/>
        </record>
    </data>
</openerp>
